{
    "compilerOptions": {
      "incremental": true,
      "target": "es6",
      "module": "commonjs",
      "lib": [
        "ES2015",
        "ES2016",
        "ES2017",
        "ES2018",
        "ES2019",
        "ES2020",
        "ESNext"
      ],
      "allowJs": true,
      "checkJs": true,
      "sourceMap": false,
      "outDir": "./build",
      "noEmit": false,
      "resolveJsonModule": true,
      "strictFunctionTypes": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": true,
      "noImplicitReturns": true,
      "moduleResolution": "Node",
      "baseUrl": ".",
      "paths": {
        "@app/*": ["src/app/*"],
        "@infrastructure/*": ["src/infrastructure/*"],
        "@domain/*": ["src/domain/*"]
      },
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true,
      "skipLibCheck": true
    },
    "include": [
      "./src/**/*"
    ],
    "exclude": [
      "node_modules",
    ]
  }